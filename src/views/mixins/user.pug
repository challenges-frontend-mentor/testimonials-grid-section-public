mixin card-user(pictureURL, authorName, classModifier = "")
  header(class= (`card__header user ${classModifier}`.trimRight()))
    .user__left
      img(src= `assets/images/${pictureURL}.jpg` alt= `${authorName} profile picture`).user__photo
    .user__right
      p.user__author-name= authorName
      p.user__profession= "Verified Graduate"

    